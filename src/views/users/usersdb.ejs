        <main>
            <h1 id="titulo-productos">Todos los Usuarios</h1>

            
            <div class="productos-container">
                <% for (user of usersdb) { %>
                <div class="productdiv">
                    <div class="imgdiv">
                        <a href="/product-detail/<%= user.id %>">

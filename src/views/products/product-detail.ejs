<!DOCTYPE html>
<html lang="en">
   
    <%- include("../partials/head.ejs") %>

<body>

    <%- include("../partials/header.ejs")%>

<section class="section-producto">
    <div class="div-producto">
        <article>
            <div class="div-img"><img height="400px" width="auto" src="/images/productos/<%= product.image %>" alt="<% product.name %>"></div>
        </article>
        <article class="article-producto">
            <div class="descripcion">
                <h4>Descripción</h4>
                <p><%= product.detail %></p>
            </div>
        </article>
    </div>

    <div>

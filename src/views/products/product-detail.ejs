                <option value="12">12</option>
                <option value="13">13</option>
                <option value="14">14</option>
                <option value="15">15</option>
                <option value="16">16</option>
                <option value="17">17</option>
                <option value="18">18</option>
                <option value="19">19</option>
                <option value="20">20</option>
            </select>
            <button class="button-producto">Agregar al carrito</button>
            <a href="/product-edit-form/<%= product.id %>" class="action-button edit">EDITAR PRODUCTO</a>
			<form action="/products/delete/<%= product.id %>?_method=DELETE" method="POST" style="display: inline-flex">
				<button type="submit" class="action-button delete">ELIMINAR</button>
			</form>
        </aside>
    </div>
</section>



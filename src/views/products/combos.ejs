<!DOCTYPE html>
<html lang="en">

    <%- include("../partials/head.ejs")%>

    <body>
        <%- include("../partials/header.ejs")%>
        <main>
            <h1 id="titulo-productos">Todos los combos</h1><br>

            
            <div class="productos-container">
                <% for (product of productsCombos) { %>
                <div class="productdivcombos">
                    <div class="imgdivcombos">
                        <a href="/product-detail/<%= product.id %>">
                         <img  class="imgvend" src="/images/productos/<%= product.image %>" alt="vino1">
                         
                     </div>
                     <div class="contentdivcombo">
                         <h4 class="parrafocontentcombo"><p><%= product.name %></p></h4>
                         <h5 class="parrafocontentcombo"><p>$ <%= product.price %> c/u</p></h5>
                         <button class="vendidosButton">Agregar al carrito</button>
                     </div>
                 </div>
                 <% } %>
            </div>
            
        </main>
        <%- include("../partials/footer.ejs")%>
    </body>
</html>